#
# nek parameter file
#
[GENERAL] 
#startFrom = 
stopAt = endTime
PnPnFormulation = yes
endTime = 2000.0

dt = 0
timeStepper = bdf3 #char #steady
variableDt = yes
targetCFL = 1.0

writeControl = runTime
writeInterval = 200.0

userParam01 = 1.0    # start time collecting statistics
userParam02 = 1.0     # writeInterval 1D statistics

dealiasing = yes
filtering = hpfrt #hpfrt, none, explicit
filterWeight = 10.0
filterCutoffRatio = 0.9

[PROBLEMTYPE]
equation = incompNS
stressFormulation = yes
variableProperties = no

[PRESSURE]
preconditioner = semg_xxt
residualTol = 1e-4
#residualProj = yes

[VELOCITY]
residualTol = 1e-6
#residualProj = yes
density = 1.0
viscosity = -10000
#advection = yes
